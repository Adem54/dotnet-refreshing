{
  "Logging": {
    "LogLevel": { //All providers, LogLevel applies to all the enable
      "Default": "Information", //Default logging, Error and higher.Applicable for all provider and all modules
      "Microsoft.AspNetCore": "Error" //All microsoft* categories
    },
    "Console": { // Console provider.
      "LogLevel": {
        "Default": "Error", // Overrides preceding LogLevel:Default setting.
        "Microsoft.Hosting": "Trace" // Debug:Microsoft.Hosting category.
      }
    },
    "Debug": { // Debug provider.
      "LogLevel": {
        "Default": "Warning", // Overrides preceding LogLevel:Default setting.
        "Microsoft.Hosting": "Error" // Debug:Microsoft.Hosting category.
      }
    }
  },

  "AllowedHosts": "*",
  //Biz cift-tirnak isaretlerini acar acmaz, ConnectinString hemen oneri olarak geliyor bu su demektir,Connection string predefined, yani daha onceden tanimlanmis ve hatta bizim nasil kullanacagimzi da yazmislar Progam.cs icerisinde builder.Configuration.GetConnectionString(string)...yani predefined demek bizim icin, extennsion methodu olusturmuslar zaten dotnet taraindan olusturulmus...
  "ConnectionStrings": {
    "CollegeAppDBConnection": "Data Source=localhost;Initial Catalog=CollegeAppDB;Integrated Security=True;Trust Server Certificate=True"
  }//Evet connectionstring imizi okuyabiliriz...Program.cs de..
}

